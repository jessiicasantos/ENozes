<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="controlf13.enozes.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundmenu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,RtlHardcoded,UselessLeaf">

        <ImageButton
            android:id="@+id/btnConfig"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btnVoltar"
            android:layout_marginLeft="10dp"
            android:background="#21100B"
            android:elevation="1dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/iconeconfig"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#21100B"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/iconevoltar"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <ImageView
            android:id="@+id/logoENozes"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/logojogo"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/msgIniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Toque para Iniciar"
            android:textSize="30sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/logoControlF13"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/logoENozes"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="9dp"
            android:layout_toStartOf="@+id/controlF13Text"
            app:srcCompat="@drawable/logotime"
            tools:ignore="ContentDescription"
            tools:layout_editor_absoluteX="665dp"
            tools:layout_editor_absoluteY="402dp" />

        <TextView
            android:id="@+id/controlF13Text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:text="Desenvolvido por"
            android:textAlignment="center"
            android:textSize="12sp"
            tools:ignore="HardcodedText"
            android:layout_above="@+id/logoControlF13"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
